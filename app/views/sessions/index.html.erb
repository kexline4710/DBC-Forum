<div class="content-div">



<% if !!session[:user_id] %>
	<% @user = User.find_by_id(session[:user_id]) %>
	<h1><%= @user.name %> you are currently logged in to DBC Forum</h1>
  <%= link_to 'Your profile', login_path(@user) %>
<% else %>
	<h1> Welcome to DBC Forun </h1>
<% end %>


	<ul id="nav">Recent Questions
<% @questions.each do |question| %>
	
      <li><%= link_to question.title, question_path(question) %></li>
  <% end %>
	</ul>



</div>