<div class="content-div">

	<% if current_user %>
		<% @user = current_user %>
		<h1>Welcome, <%= @user.name %>!</h1>
	<% else %>
		<h1> Welcome to DBC Forum </h1>
	<% end %>

	<h3 style="margin-left: 10px"> Recent Questions </h3>
	<ul id="nav">
	  <% @questions.each do |question| %>
	    <li><%= link_to question.title, question_path(question) %></li>
	  <% end %>
	</ul>
</div>

