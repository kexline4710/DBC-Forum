<!DOCTYPE html>
<html>
<head>
  <title>DBCForum</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav>
  <div class='nav_content'>
    <div class='left-align'>
      <%= link_to 'DBCForum', root_path %>
      <%= link_to "Ask a Question", new_question_path %>
    </div>
      <% if current_user %>
        <div class='right-align'>
        <%= link_to "Account", edit_user_path(@user) %>
        <%= link_to current_user.name + "'s profile", user_path(current_user) %>
        <%= link_to 'Log out', logout_path %>
        </div>
      <% else %>
        <div class='right-align'>
        <%= link_to 'Log in', login_path %>
        <%= link_to 'Sign up', new_user_path %>
        </div>
      <% end %>
  </div>

</nav>

<%= yield %>

<div class="content-div">

  <% if flash[:success] %>
    <p class="flash"><%= flash[:success]  %></p>
  <% elsif flash[:error] %>
    <p class="bad-flash"><%= flash[:error] %></p>
  <% end %>

</div>

</body>
</html>
