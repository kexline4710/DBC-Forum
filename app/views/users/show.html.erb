<h1><%= @user.name %>'s Profile Page</h1>
<br><br>
<div>
  <h3>Email: <%= @user.email %></h3>
</div>
<br>
<% if @user.questions %>
<h2>Questions:</h2>
<div>
  <ul>
    <% @user.questions.each do |question| %>
    <li>
      <%= link_to question.title, question_path(question) %>
    </li>
    <% end %>
  </ul>
</div>
<% end %> 
<div>
  <%= link_to "Edit", edit_user_path(@user) %>
</div>
